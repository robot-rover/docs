.collapsible-table
  margin: 5px 0;

  &__header
    padding: 30px;
    background-color: #22242b;
    color: #ddd;
    font-size: 18px;
    cursor: pointer;
    position: relative;
    overflow: hidden;

    i.fa
      margin-right: 10px;
      font-size: 25px;
      vertical-align: middle;

    span
      vertical-align: middle;

    &:hover
      color: white;

    em
      font-style: normal;
      color: #999;
      font-size: 14px;
      margin-left: 10px;

    img
      position: absolute;
      right: 0;
      top: 0;

  &__content
    display: none;